  "infiniteMode": {
    "enabled": true,
    "startAfterWave": 3,
    "loopWaves": [1, 2, 3],

    "scaling": {
      "healthMultiplier": 0.15,
      "damageMultiplier": 0.10,
      "speedMultiplier": 0.05,
      "countMultiplier": 0.20,
      "spawnRateMultiplier": -0.05,
      "xpMultiplier": 0.10
    },

    "bossWaves": {
      "enabled": true,
      "frequency": 7,
      "bossPool": [
        {
          "bossType": "corrupted_knight",
          "weight": 40,
          "spawnAnimation": "portal_spawn",
          "spawnPattern": "random_scatter",
          "messageDelay": 3.0,
          "message": "A powerful enemy approaches!"
