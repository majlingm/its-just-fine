{
  "id": "survival_basic",
  "name": "Basic Survival Spawning",
  "description": "Standard survival mode spawn configuration with wave-based enemy spawning",

  "spawnMode": "wave_based",

  "globalSettings": {
    "startDelay": 3.0,
    "wavePauseDelay": 5.0,
    "waveCompleteThreshold": 10,
    "spawnSafeDistance": 15,
    "spawnMaxDistance": 25,
    "allowOffscreenSpawns": true,
    "minOffscreenDistance": 3,
    "playerProximityCheck": true,
    "maxSpawnsPerFrame": 5
  },

  "spawnAnimations": [
    {
      "id": "rise_from_ground",
      "enabled": true,
      "duration": 0.8,
      "startScale": 0.1,
      "endScale": 1.0,
      "startY": -1.0,
      "endY": 0.0,
      "easing": "easeOutBack",
      "particleEffect": "dust_cloud"
    },
    {
      "id": "fade_in",
      "enabled": true,
      "duration": 0.5,
      "startOpacity": 0.0,
      "endOpacity": 1.0,
      "easing": "easeIn"
    },
    {
      "id": "portal_spawn",
      "enabled": false,
      "duration": 1.0,
      "portalOpenTime": 0.5,
      "portalCloseTime": 0.3,
      "particleEffect": "portal_swirl"
    },
    {
      "id": "instant",
      "enabled": true,
      "duration": 0.0
    }
  ],

  "spawnPatterns": [
    {
      "id": "circle_around_player",
      "type": "circle",
      "radiusMin": 40,
      "radiusMax": 55,
      "angleRandomness": 360,
      "offsetRandomness": 5
    },
    {
      "id": "arc_front",
      "type": "arc",
      "radiusMin": 45,
      "radiusMax": 50,
      "arcAngle": 120,
      "arcDirection": "front",
      "pointCount": 5
    },
    {
      "id": "grid_formation",
      "type": "grid",
      "rows": 3,
      "columns": 3,
      "spacing": 3,
      "centerOffset": {"x": 0, "z": 50}
    },
    {
      "id": "random_scatter",
      "type": "random",
      "count": 1,
      "radiusMin": 40,
      "radiusMax": 60
    },
    {
      "id": "offscreen_edge",
      "type": "offscreen",
      "edgeBuffer": 5,
      "preferredEdges": ["top", "left", "right"],
      "avoidEdges": ["bottom"]
    }
  ],

  "groupFormations": [
    {
      "id": "tight_cluster",
      "type": "cluster",
      "spacing": 2,
      "radiusVariation": 1,
      "linkedMovement": false
    },
    {
      "id": "line_formation",
      "type": "line",
      "spacing": 3,
      "angle": 0,
      "linkedMovement": true,
      "formationSpeed": 0.8
    },
    {
      "id": "v_formation",
      "type": "v_shape",
      "spacing": 2.5,
      "angle": 45,
      "linkedMovement": true,
      "formationSpeed": 0.9,
      "leaderBehavior": "aggressive"
    },
    {
      "id": "surrounding_circle",
      "type": "circle",
      "radius": 5,
      "linkedMovement": true,
      "rotationSpeed": 0.5,
      "formationSpeed": 0.7
    },
    {
      "id": "scattered",
      "type": "scattered",
      "radiusMin": 1,
      "radiusMax": 8,
      "linkedMovement": false
    }
  ],

  "triggers": [
    {
      "id": "wave_timer",
      "type": "time_based",
      "enabled": true,
      "interval": 30.0,
      "repeatMode": "continuous"
    },
    {
      "id": "enemy_threshold",
      "type": "enemy_count",
      "enabled": true,
      "threshold": 5,
      "operator": "less_than",
      "checkInterval": 1.0
    },
    {
      "id": "wave_complete",
      "type": "wave_complete",
      "enabled": true
    },
    {
      "id": "boss_defeated",
      "type": "event",
      "enabled": false,
      "eventName": "boss_defeated"
    },
    {
      "id": "player_damaged",
      "type": "event",
      "enabled": false,
      "eventName": "player_damaged",
      "cooldown": 5.0
    },
    {
      "id": "area_entered",
      "type": "spatial",
      "enabled": false,
      "areaType": "circle",
      "position": {"x": 0, "z": 50},
      "radius": 10,
      "triggerOnce": true
    }
  ],

